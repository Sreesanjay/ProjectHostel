<!-- login page for common people-->

    <section class=" sign-in vh-100 py-3" >
        <div class="container-fluid h-custom">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
              <img src="https://drive.google.com/uc?id=13xTKjhV6Vn9nRjMl4pkkp6anysJawpvx"
                class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1 bg-info p-5" style="border-radius: 5px;">

              <form action="/login" method="POST" enctype="multipart/form-data">

                <div class="d-flex flex-row align-items-center justify-content-center justify-content-center my-5">
                  <h1 class="lead fw-normal text-white">Sign in </h1>
                </div>
              {{#if err}}
              <div class="LogginErr mb-3 bg-info">
                <h5 class="text-danger">
                  {{err}}
                </h5>
              </div>
              
              {{/if}}
                <!-- Email input -->
                <div class="form-outline mb-4">
                  <input type="email" id="form3Example3" class="form-control form-control-lg"

                    placeholder="Enter a valid email address" name="eMail" />
                  <label class="form-label" for="form3Example3">Email address</label>
                </div>
      
                <!-- Password input -->
                <div class="form-outline mb-3">
                  <input type="password" id="form3Example4" class="form-control form-control-lg"

                    placeholder="Enter password" name="Password" />
                  <label class="form-label" for="form3Example4">Password</label>
                </div>
                <div class="create-account my-2">
                  <a href="/signup" class="text-body">Dont have an account</a>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                  <!-- Checkbox -->
                  <div class="form-check mb-0">
                    <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
                    <label class="form-check-label" for="form2Example3">
                      Remember me
                    </label>
                  </div>
                  <a href="#!" class="text-body">Forgot password?</a>
                </div>
      
                <div class="text-center text-lg-start mt-4 pt-2">
                  <button type="submit" class="btn btn-primary btn-lg"
                    style="padding-left: 2.5rem; padding-right: 2.5rem;">Login</button>
                </div>
      
              </form>
            </div>
          </div>
        </div>
        
        </section>

